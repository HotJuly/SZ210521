<view class="indexContainer">
  <swiper 
  class="bannerSwiper"
  indicator-active-color="#d43c33"
  indicator-dots
  circular
  autoplay
  >
    <!-- <swiper-item 
    class="bannerItem"
    v-for="(item,index) in banners"
    :key="item.bannerId"
    > -->
    <swiper-item 
    class="bannerItem"
    wx:for="{{banners}}"
    wx:key="bannerId"
    wx:for-item="banner"
    >
      <image class="bannerImg" src="{{banner.pic}}"></image>
    </swiper-item>
  </swiper>

  <view class="nav">
    <view class="navItem">
      <view class="iconfont icon-meirituijian-"></view>
      <text class="navTitle">每日推荐</text>
    </view>
    <view class="navItem">
      <view class="iconfont icon-gedan1"></view>
      <text class="navTitle">歌单</text>
    </view>
    <view class="navItem">
      <view class="iconfont icon-icon-ranking"></view>
      <text class="navTitle">排行榜</text>
    </view>
    <view class="navItem">
      <view class="iconfont icon-diantai"></view>
      <text class="navTitle">电台</text>
    </view>
    <view class="navItem">
      <view class="iconfont icon-zhiboguankanliangbofangsheyingshexiangjixianxing"></view>
      <text class="navTitle">直播</text>
    </view>
  </view>

  <view class="recommendContainer">
    <view class="header">
      <view class="title">推荐歌曲</view>
      <view class="moreContent">
        <view class="moreTitle">为你精心推荐</view>
        <view class="more">查看更多</view>
      </view>
    </view>

    <scroll-view 
    class="recommendScroll"
    enable-flex
    scroll-x
    >
      <view 
      class="recommendItem"
      wx:for="{{recommendList}}"
      wx:key="id"
      >
        <image class="recommendImg" src="{{item.picUrl}}"></image>
        <view class="recommendContent">
        {{item.name}}
        </view>
      </view>
    </scroll-view>
    123
  </view>
</view>